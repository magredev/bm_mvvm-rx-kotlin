<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/card_view_margin_right_left"
        android:layout_marginRight="@dimen/card_view_margin_right_left"
        android:layout_marginBottom="@dimen/card_view_margin_top_bottom"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:contentPadding="@dimen/card_view_padding"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/transactionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyleBig.Gray.Bold"
                    tools:text="21.23"/>

                <TextView
                    android:id="@+id/transactionCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextStyleBig.Gray.Italic"
                    tools:text="EUR"/>

            </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
